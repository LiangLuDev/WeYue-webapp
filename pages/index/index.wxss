page, .page, .page__bd {
  height: 100%;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 50px;
  text-align: center;
  background-color: white;
}

.classify__content {
  text-align: left;
  padding-top: 10px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  margin-left: 10px;
  padding-bottom: 5px;
}

.classify__image {
  width: 24px;
  height: 24px;
}

.classify__text__name {
  padding-left: 20px;
  font-size: 14px;
  color: black;
}

.classify__text__count {
  padding-right: 20px;
  text-align: right;
  font-size: 12px;
  color: #666;
